<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/pharmacystore2
		</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">prefab</property>
		<property name="hibernate.default_schema">pharmacystore2</property>
		<!-- SQL dialect -->
		<property name="dialect">org.hibernate.dialect.MariaDBDialect
		</property>
		<property name="hbm2ddl.auto">update</property>
		<property name="hibernate.show_sql">false</property>

		<mapping class="com.pharmacy.model.Products" />
		<mapping class="com.pharmacy.model.Customers" />
		<mapping class="com.pharmacy.model.Sales" />
		<mapping class="com.pharmacy.model.Supplier" />
		<mapping class="com.pharmacy.model.User" />
				<mapping class="com.pharmacy.web.connection.Login" />
		

	</session-factory>
</hibernate-configuration>